<style>
  body {
    margin: 0;
    padding: 0;
  }

  .navbar {
    margin: 0;
    padding: 0;
    background-color: #f2f2f2;
    transition: height 0.3s ease, background-color 0.3s ease;
  }

  .navbar-collapse {
    background-color: #f2f2f2;
    transition: max-height 0.3s ease-in-out;
    overflow: hidden;
    width: 100%; /* Ensure full width of the navbar */
  }

  .navbar-collapse.collapsing {
    max-height: 0;
  }

  .navbar-collapse.show {
    max-height: 500px;
  }

  .navbar-toggler {
    border: none;
  }

  .btn-search {
    background-color: #fe424d;
    color: white;
    border-radius: 25px;
    padding: 0 1rem;
  }

  .btn-search:hover {
    background-color: #fe424d;
    color: white;
  }

  .btn-search i {
    display: inline;
    margin-right: 0.5rem;
  }

  .input-search {
    border-radius: 25px;
    padding: 0.5rem 3rem;
    font-size: 1rem;
  }

  .navbar-nav .nav-link {
    color: #333;
  }

  .navbar-nav .nav-link:hover {
    color: #fe424d;
  }

  /* Adjustments for smaller screens */
  @media (max-width: 768px) {
    .navbar-collapse {
      width: 100%;
    }

    .navbar-nav {
      width: 100%; /* Ensure navbar items span the full width */
      display: flex;
      flex-direction: column;
      align-items: flex-start; /* Align links to the left */
    }

    .navbar-nav .nav-link {
      padding: 0.5rem 1rem;
    }

    .btn-search {
      width: 100%; /* Make the search button full width */
      border-radius: 25px;
      margin-top: 0.5rem;
    }

    .input-search {
      width: 100%;
      border-radius: 25px;
    }
  }
</style>

<nav class="navbar navbar-expand-md sticky-top">
  <div class="container-fluid">
    <!-- Brand -->
    <a class="navbar-brand" href="/listings">
      <i class="fa-solid fa-compass"></i>
    </a>

    <!-- Toggler button -->
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible content -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <!-- Left-aligned links -->
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <!-- Center-aligned search -->
      <div class="navbar-nav ms-auto">
        <form class="d-flex" role="search">
          <input
            class="form-control me-2 input-search"
            type="search"
            placeholder="Search destinations"
            aria-label="Search"
          />
          <button class="btn btn-search" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>
      </div>

      <!-- Right-aligned links -->
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Host</a>

        <% if (!currUser) { %>
        <a class="nav-link" aria-current="page" href="/signup"><b>Sign up</b></a>
        <a class="nav-link" href="/login"><b>Log in</b></a>
        <% } %>

        <% if (currUser) { %>
        <a class="nav-link" href="/logout">Log out</a>
        <% } %>
      </div>
    </div>
  </div>
</nav>

<style>
  body {
      margin: 0;
      padding: 0;
  }

  .navbar {
      margin: 0;
      padding: 0;
      background-color: #f2f2f2; /* Light grey for the navbar */
      transition: height 0.3s ease, background-color 0.3s ease; /* Smooth height transition */
  }

  .navbar-collapse {
      background-color: #f2f2f2;
      transition: max-height 0.3s ease-in-out;
      overflow: hidden;
  }

  .navbar-toggler {
      border: none;
  }

  .btn-search {
      background-color: #fe424d;
      color: white;
      border-radius: 25px;
      padding: 0 1rem;
  }

  .btn-search:hover {
      background-color: #fe424d;
      color: white;
  }

  .btn-search i {
      display: inline;
      margin-right: 0.5rem;
  }

  .input-search {
      border-radius: 25px;
      padding: 0.5rem 3rem;
      font-size: 1rem;
  }

  .navbar-nav .nav-link {
      color: #333; /* Darker text for readability */
  }

  .navbar-nav .nav-link:hover {
      color: #fe424d; /* Highlight effect */
  }

  /* Adjust for proper sliding height */
  .navbar-collapse.collapsing {
      max-height: 0; /* Start from height 0 during collapse/expand */
  }

  .navbar-collapse.show {
      max-height: 500px; /* Adjust to the expected expanded height */
  }
</style>
</head>
<body>

<nav class="navbar navbar-expand-lg">
<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
  <span class="navbar-toggler-icon"></span>
</button>
<div class="collapse navbar-collapse" id="navbarNav">
  <ul class="navbar-nav">
      <li class="nav-item">
          <a class="nav-link" href="#">Home</a>
      </li>
      <li class="nav-item">
          <a class="nav-link" href="#">Host</a>
      </li>
      <li class="nav-item">
          <a class="nav-link" href="#">Search</a>
      </li>
      <li class="nav-item">
          <button class="btn-search">
              <i class="bi bi-search"></i> Search
          </button>
      </li>
  </ul>
</div>
</nav>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

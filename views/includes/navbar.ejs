<style>
  body {
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;
  }

  .navbar {
    background-color: #f2f2f2;
    transition: height 0.3s ease, background-color 0.3s ease;
    z-index: 1000;
    position: sticky;
    top: 0;
  }

  .navbar-toggler {
    border: none;
    outline: none;
  }

  .btn-search {
    background-color: #fe424d;
    color: white;
    border-radius: 25px;
    padding: 0 1rem;
    border: none;
  }

  .btn-search:hover {
    background-color: #e73a43;
    color: white;
  }

  .input-search {
    border-radius: 25px;
    padding: 0.5rem 3rem;
    font-size: 1rem;
  }

  .navbar-nav .nav-link {
    color: #333;
  }

  .navbar-nav .nav-link:hover {
    color: #fe424d;
  }

  .navbar-collapse {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.5s ease-in-out;
    background-color: #f2f2f2; /* Background for the expanded menu */
    position: absolute;
    width: 100%; /* Full width of the screen */
    z-index: 1000; /* Ensures it overlays content below */
  }

  .navbar-collapse.show {
    max-height: 400px; /* Adjust the height based on content */
  }

  @media (max-width: 768px) {
    .navbar-collapse {
      position: absolute;
      top: 100%; /* To push below the navbar */
      left: 0;
      right: 0;
      z-index: 1000;
    }

    .navbar-nav {
      flex-direction: column;
      align-items: flex-start;
      padding: 1rem;
    }

    .navbar-nav .nav-link {
      padding: 0.5rem 1rem;
      width: 100%;
    }

    .input-search {
      width: 100%;
      margin-bottom: 1rem;
    }

    .btn-search {
      width: 100%;
    }

    .navbar-collapse.show {
      max-height: 400px; /* Smooth animation for expanded content */
      overflow-y: auto; /* Allow scrolling if the content is longer */
    }
  }
</style>

<nav class="navbar navbar-expand-md sticky-top">
  <div class="container-fluid">
    <!-- Navbar brand -->
    <a class="navbar-brand" href="/listings"><i class="fa-solid fa-compass"></i></a>

    <!-- Toggler button -->
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible content -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>
      <div class="navbar-nav ms-auto">
        <form class="d-flex" role="search">
          <input
            class="form-control me-2 input-search"
            type="search"
            placeholder="Search destinations"
            aria-label="Search"
          />
          <button class="btn btn-search" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>
      </div>
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Host</a>

        <% if (!currUser) { %>
        <a class="nav-link" aria-current="page" href="/signup"><b>Sign up</b></a>
        <a class="nav-link" href="/login"><b>Log in</b></a>
        <% } %>

        <% if (currUser) { %>
        <a class="nav-link" href="/logout">Log out</a>
        <% } %>
      </div>
    </div>
  </div>
</nav>

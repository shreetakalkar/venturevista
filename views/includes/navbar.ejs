<style>
  body {
      margin: 0;
      padding: 0;
  }

  .navbar {
      margin: 0;
      padding: 0;
      background-color: #f2f2f2; /* Light grey for the navbar */
      transition: height 0.3s ease, background-color 0.3s ease; /* Smooth height transition */
  }

  .navbar-collapse {
      background-color: #f2f2f2; /* Match the navbar color */
      transition: max-height 0.3s ease-in-out; /* Smooth sliding effect */
      overflow: hidden; /* Prevent content overflow during sliding */
  }

  .navbar-toggler {
      border: none;
  }

  .navbar-toggler-icon {
      background-color: #333; /* Dark toggler icon for visibility */
  }

  .btn-search {
      background-color: #fe424d;
      color: white;
      border-radius: 25px;
      padding: 0 1rem;
  }

  .btn-search:hover {
      background-color: #fe424d;
      color: white;
  }

  .btn-search i {
      display: inline;
      margin-right: 0.5rem;
  }

  .input-search {
      border-radius: 25px;
      padding: 0.5rem 3rem;
      font-size: 1rem;
  }

  .navbar-nav .nav-link {
      color: #333; /* Darker text for readability */
  }

  .navbar-nav .nav-link:hover {
      color: #fe424d; /* Highlight effect */
  }

  /* Adjust for proper sliding height */
  .navbar-collapse.collapsing {
      max-height: 0; /* Start from height 0 during collapse/expand */
  }

  .navbar-collapse.show {
      max-height: 300px; /* Adjust to the expected expanded height */
  }
</style>

<nav class="navbar navbar-expand-md sticky-top">
  <div class="container-fluid">
      <!-- Brand -->
      <a class="navbar-brand" href="/listings"><i class="fa-solid fa-compass"></i></a>

      <!-- Toggler Button -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Navbar Content -->
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <!-- Left Section -->
          <div class="navbar-nav">
              <a class="nav-link" href="/listings">Explore</a>
          </div>

          <!-- Search Bar -->
          <div class="navbar-nav ms-auto">
              <form class="d-flex" role="search">
                  <input class="form-control me-2 input-search" type="search" placeholder="Search destinations" aria-label="Search">
                  <button class="btn btn-search" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
              </form>
          </div>

          <!-- Right Section -->
          <div class="navbar-nav ms-auto">
              <a class="nav-link" href="/listings/new">Host</a>

              <% if (!currUser) { %>
              <a class="nav-link" aria-current="page" href="/signup"><b>Sign up</b></a>
              <a class="nav-link" href="/login"><b>Log in</b></a>
              <% } %>

              <% if (currUser) { %>
              <a class="nav-link" href="/logout">Log out</a>
              <% } %>
          </div>
      </div>
  </div>
</nav>

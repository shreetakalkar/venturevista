<% layout("/layouts/boilerplate") %>
<style>
  /* Button styling */
  .btn-search {
    background-color: #fe424d;
    color: white;
    border-radius: 25px;
    padding: 0.5rem 1rem;
    font-size: 1rem;
    border: none;
  }
  .btn-search:hover {
    background-color: #e73a43; /* Slightly darker shade for hover */
    color: white;
  }
  .btn-search i {
    display: inline;
    margin-right: 0.5rem;
  }

  /* Input search styling */
  .input-search {
    border-radius: 25px;
    padding: 0.5rem 2rem; /* Adjusted for better spacing */
    font-size: 1rem;
    border: 1px solid #ccc; /* Light border for better contrast */
  }
  .input-search:focus {
    outline: none;
    box-shadow: 0 0 5px rgba(254, 66, 77, 0.5);
    border-color: #fe424d;
  }

  /* Navbar fixes */
  .navbar {
    background-color: #f8f9fa;
    position: sticky;
    top: 0;
    z-index: 1000;
    margin-top: 0; /* Ensure no top margin */
  }
  .navbar-brand i {
    color: #fe424d;
    font-size: 2rem;
  }
  .navbar-nav .nav-link {
    color: #222222 !important;
    font-size: 1rem;
    margin-left: 1rem;
  }
  .navbar-nav .nav-link:hover {
    text-decoration: underline;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .input-search {
      font-size: 0.9rem;
      padding: 0.4rem 1.5rem;
    }
    .btn-search {
      font-size: 0.9rem;
      padding: 0.4rem 0.8rem;
    }
    .navbar-nav .nav-link {
      font-size: 0.9rem;
      margin-left: 0.5rem;
    }
    .navbar-nav {
      display: flex;
      flex-direction: column;
    }
  }

  /* Navbar collapses correctly when toggled */
  .navbar-collapse {
    transition: max-height 0.3s ease-out;
  }
  .navbar-collapse.collapsing {
    max-height: 0;
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="/listings"><i class="fa-solid fa-compass"></i></a>
      <!-- Navbar Toggler for small screens -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Collapsing navbar content -->
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-link" href="/listings">Explore</a>
        </div>

        <!-- Navbar search form -->
        <div class="navbar-nav ms-auto">
          <form class="d-flex" role="search">
            <input class="form-control me-2 input-search" type="search" placeholder="Search destinations" aria-label="Search">
            <button class="btn btn-search" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
          </form>
        </div>

        <!-- Authentication links -->
        <div class="navbar-nav ms-auto">
          <a class="nav-link" href="/listings/new">Host</a>

          <% if(!currUser) {%>
          <a class="nav-link" aria-current="page" href="/signup"><b>Sign up</b></a>
          <a class="nav-link" href="/login"><b>Log in</b></a>
          <%}%>

          <% if(currUser) {%>
          <a class="nav-link" href="/logout">Log out</a>
          <%}%>
        </div>
      </div>
    </div>
</nav>

<!-- Bootstrap JS (Include at the end of the body to load faster) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
